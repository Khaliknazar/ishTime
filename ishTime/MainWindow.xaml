<Window x:Class="ishTime.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ishTime"
        mc:Ignorable="d"
        Title="ish Time" Height="800" Width="450" ResizeMode="NoResize" Background="#5B0888" FontFamily="Segoe UI Black">
    <Grid>
        <TextBlock FontSize="80" Height="400" Margin="0,400,0,0" TextAlignment="Center" Foreground="#E5CFF7">
            01:21:33
        </TextBlock>
        <Button Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Click="Button_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Width="300" Height="300" Fill="#713ABE"/>
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>
                </ControlTemplate>
            </Button.Template>
            <Image Name="playButton" Height="177" Width="177" Source="/resources/play.png"/>
        </Button>

    </Grid>
</Window>
